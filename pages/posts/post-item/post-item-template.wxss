.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  padding-bottom: 5px;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
}
.post-author-date {
  margin-left: 10rpx;
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date {
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-bottom: 5rpx;
  vertical-align: middle;
}
.post-title {
  font-size: 34rpx;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  font-weight: 600;
  color: #333;
}
.post-image {
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15rpx;
}
.post-content {
  font-size: 28rpx;
  color: #666;
  margin: 0 0 20rpx 20rpx; 
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  flex-direction: row;
  font-size: 13px;
  margin-left: 10px;
  line-height: 16px;
}
.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}
